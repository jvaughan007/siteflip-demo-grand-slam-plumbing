---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
interface Props { title?: string; description?: string; }
const { title = 'Grand Slam Plumbing', description = 'Our goal is to provide our customers with an All Star Experience by offering exceptional plumbing service and advice with honest upfront pricing.' } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content={description} />
  <title>{title}</title>
</head>
<body>
  <Header />
  <main><slot /></main>
  <Footer />
</body>
</html>
