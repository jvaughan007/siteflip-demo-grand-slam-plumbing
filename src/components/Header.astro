<style>
  .site-header { position: sticky; top: 0; z-index: 1000; background: var(--primary); backdrop-filter: blur(10px); border-bottom: 1px solid rgba(255,255,255,0.1); }
  .header-inner { display: flex; justify-content: space-between; align-items: center; max-width: 1140px; margin: 0 auto; padding: 0.875rem 1.5rem; }
  .logo a { color: #fff; text-decoration: none; display: flex; align-items: center; gap: 0.5rem; }
  nav { display: flex; align-items: center; gap: 1.5rem; }
  nav a { color: rgba(255,255,255,0.8); font-size: 0.9rem; font-weight: 500; }
